{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": [
      "es6"
    ],
    "allowJs": true,
    "strict": true,
    "outDir": "./dist",
    "baseUrl": "src/@types",
    "typeRoots": [
      "node_modules/@types",
      "src/@types"
    ],
    "types": [
      "node"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}